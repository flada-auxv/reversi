#!/usr/bin/env ruby

require_relative '../lib/reversi'

require 'pp'
require 'stringio'


class ReversiExecuter
  def initialize
    @game = Reversi.new
  end

  def run
    print_board
    @game.move_black(4,5)
    print_board
    @game.move_white(3,5)
    print_board
  end

  def print_board
    # pp @game.board

    turn = @game.turn ? :black : :white
    puts "turn -> #{turn}"
    puts "------------------"
    puts "  a b c d e f g h"

    sio = StringIO.new
    @game.board.each_with_index do |x_line, i|
      sio << "#{i+1}"
      x_line.each do |y|
        sio << '|'
        if y.nil?
          sio << ' '
        elsif y
          sio << 'b'
        else
          sio << 'w'
        end
      end
      sio << "|\n"
    end

    puts sio.string
    puts ''
  end

  def next_turn
  end
end

ReversiExecuter.new.run
